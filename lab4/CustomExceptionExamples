package lab3;

class InvalidMarksException extends Exception {
    public InvalidMarksException(String message) {
        super(message);
    }
}

public class CustomExceptionExamples {	
    public static void checkMarks(int marks) throws InvalidMarksException {
        if (marks < 0 || marks > 100) {
            throw new InvalidMarksException("Invalid marks: " + marks + ". Marks should be between 0 and 100.");
        } else {
            System.out.println("Marks " + marks + " are valid.");
        }
    }

    public static void main(String[] args) {
        java.util.Scanner scanner = new java.util.Scanner(System.in);

        try {
            System.out.print("Enter the student's marks: ");
            int marks = scanner.nextInt();

            checkMarks(marks);

        } catch (InvalidMarksException e) {
            System.out.println("Error: " + e.getMessage());
        } catch (java.util.InputMismatchException e) {
            System.out.println("Please enter a valid integer for marks.");
        } finally {
            scanner.close();
        }
    }
}
